            <div class="regist">
                <h2>제품 등록하기</h2>
                <form name="regist" id="regist">
                    <input type="text" id="gearTitle" placeholder="제품명" /><br />
                    <input type="text" id="gearExplain" placeholder="제품설명" /><br />
                    <br />
                    <input type="file" id="gearImage" name="gearImage" accept="image/*" multiple />
                    <br />
                    <button type="button" id="registButton">등록하기</button>
                </form>
            </div>
        </section>

        <!-- Footer -->
