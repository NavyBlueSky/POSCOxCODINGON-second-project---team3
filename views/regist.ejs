<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
        <title>Main Page</title>
        <style>
            .regist {
                text-align: center;
            }
            .main {
                height: 300px;
            }
        </style>
    </head>
    <body>
        <!-- header -->
        <%-include('header.ejs')%>

        <!-- main -->

        <!-- main -->
        <section class="main" style="margin-top: 100px">
            <!-- logo -->
            <img src="" alt="" />

            <div class="regist">
                <h2>제품 등록하기</h2>
                <form name="form-regist">
                    <input type="text" id="gearTitle" placeholder="제품명" /><br />
                    <input type="text" id="gearExplain" placeholder="제품설명" /><br />
                    <div class="date">
                        <input type="date" id="startDate" />
                        ~
                        <input type="date" id="endDate" />
                    </div>
                    <input type="radio" name="rentPossible" value="1" />
                    <label for="possible">대여가능</label>
                    <input type="radio" name="rentPossible" value="0" />
                    <label for="impossible">대여불가능</label>
                    <br />
                    <button type="button" onclick="regist()">등록하기</button>
                </form>
            </div>
        </section>

        <!-- Footer -->
        <%-include('footer.ejs')%>
    </body>

    <script>
        async function regist() {
            const form = document.forms['form-regist'];
            try {
                const res = await axios({
                    method: 'POST',
                    url: '/rent/regist',
                    data: {
                        gearTitle: form.gearTitle.value,
                        gearExplain: form.gearExplain.value,
                        startDate: form.startDate.value,
                        endDate: form.endDate.value,
                        rentPossible: form.rentPossible.value,
                    },
                });
                if (res.data.result) {
                    alert('제품이 등록되었습니다!');
                    window.location.href = '/rent';
                }
            } catch (error) {
                console.log(error);
            }
        }
    </script>
</html>
