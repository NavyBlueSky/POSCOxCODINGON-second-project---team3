        document.getElementById('registButton').addEventListener('click', async function () {
            const form = document.forms['regist'];
            const formData = new FormData();
            formData.append('gearTitle', form.gearTitle.value);
            formData.append('gearExplain', form.gearExplain.value);

            // 업로드된 이미지 파일 추가
            const imageInput = document.getElementById('gearImage');
            if (imageInput.files.length > 0) {
                formData.append('gearImage', imageInput.files[0]);
            }

            try {
                const res = await axios({
                    method: 'POST',
                    url: '/rent/regist',
                    data: formData,
                    headers: {
                        'Content-Type': 'multipart/form-data', // 파일 업로드를 위한 헤더 설정
                    },
                });
                if (res.data.result) {
                    alert('제품이 등록되었습니다!');
                    window.location.href = '/rent';
                }
            } catch (error) {
                console.log(error);
            }
        });
    </script>
